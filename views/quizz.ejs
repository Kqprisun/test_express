<%- include("partials/header"); %>
<link rel="stylesheet" href="style_quizz.css">
<div class="row">
    <div class="container">
        <div class="text-center">
            <h4>Score : Correct - <%= score.correct %>, Incorrect - <%= score.incorrect %></h4>
        </div>
        <div class="text-center my-4">
            <h3><%= question.question_text %></h3>
        </div>
        <div class="col-lg-6 col-xxl-4 my-5 mx-auto">
            <div class="d-grid gap-2">
                <% for (let i = 1; i <= 4; i++) { %>
                    <form action="/quizz/answerQuestion" method="POST">
                        <input type="hidden" name="questionId" value="<%= question.id %>">
                        <input type="hidden" name="selectedOption" value="<%= i %>">
                        <button class="btn btnbtn w-100" type="submit"><%= question['option' + i] %></button>
                    </form>
                <% } %>
            </div>
        </div>
        <% if (username === 'admin') { %>
            <!-- Formulaire de suppression pour l'administrateur -->
            <div class="text-center">
                <form action="/quizz/deleteQuestion/<%= question.id %>" method="POST">
                    <button type="submit" class="btn btn-danger mt-2">Supprimer cette question</button>
                </form>
            </div>
        <% } %>
    </div>
</div>
<%- include("partials/footer"); %>
