<%- include("partials/header"); %>

<h1 class="text-center">Liste des jeux: </h1>
<div class="row">
    <% for(var i = 0;i < gamesList.length; i++){ %>
    <div class="col-md-4">
        <div class="card position-relative" style="width: 18rem;">
            <img class="card-img-top" src="/image/<%= gamesList[i].image %>" alt="Image du jeu"> <!-- Changement ici -->
            <div class="card-body">
                <% if (username === 'admin') { %>
                    <form action="/deleteGame/<%= gamesList[i].id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger btn-sm position-absolute top-0 end-0" title="Supprimer ce jeu">
                            &times;
                        </button>
                    </form>
                <% } %>
                <h5 class="card-title mt-4"><%= gamesList[i].title %></h5>
                <p class="card-text">Jeu créé par : <%= gamesList[i].creator %></p>
                <a href="/game/<%= gamesList[i].title %>/<%= gamesList[i].creator %>" class="btn btn-primary">Jouer !</a>
            </div>
        </div>
    </div>
    <% } %>
</div>

<%- include("partials/footer"); %>
